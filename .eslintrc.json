{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {"SwitchCase": 1}
        ],
        "curly": [
            "error",
            "all"
        ],
        "quotes": [
            1,
            "single"
        ],
        "semi": [
            "warning",
            "always"
        ]
    }
}